<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height_2"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/big_item_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_item2_playOrPause"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/ic_item_play"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_item_title_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="歌名-歌手.lrc"
            android:textSize="@dimen/small_item_size"
            android:textColor="@color/black"
            />
    </LinearLayout>

</LinearLayout>